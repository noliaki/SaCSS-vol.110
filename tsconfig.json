{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.promise"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "esnext",
    "typeRoots": ["types"],

  },
  "include": ["src"],
  "paths": {
    "~/*": ["./src/*"],
    "@/*": ["./src/*"]
  }
}
